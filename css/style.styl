body
	font-family "Helvetica", Tahoma, Verdana
	font-size 16px

h1
	font-size 2.5em

.container
	width 960px
	margin 0 auto

.center-text
	text-align center

.game-panel
	border-radius 10px
	box-shadow 0 0 12px #666
	clear both
	display block
	margin 0 auto
	overflow hidden
	position relative
	width 600px
	z-index 10

.game-bottom
	display block
	width 100%
	height 3.5em
	.left-controls
		margin .25em 0 0 1em
		float left
	.right-controls
		margin 1em 1em 0 0
		float right